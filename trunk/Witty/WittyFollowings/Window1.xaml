<Window x:Class="WittyFollowings.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WittyFollowings" Height="300" Width="300"
    >
    <Window.Resources>
        <DataTemplate x:Key="UsersTemplate">
            <Image Width="48" Height="48" Source="{Binding Path=ImageUrl}" x:Name="UserImage"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ListBox x:Name="UsersListBox" ItemTemplate="{StaticResource UsersTemplate}" />
    </Grid>
</Window>
